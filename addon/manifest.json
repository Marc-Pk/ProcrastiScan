{
  "manifest_version": 3,
  "name": "ProcrastiScan",
  "version": "1.0",
  "description": "A new approach to detecting procrastination",
  "icons": {
    "128": "assets/procrastiscan-icon-inv-128px.png"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "welcome.html",
    "open_in_tab": true
  }
}
