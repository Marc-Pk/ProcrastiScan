{
  "manifest_version": 2,
  "name": "ProcrastiScan",
  "version": "1.0",
  "description": "A new approach to detecting procrastination",
  "icons": {
    "128": "assets/procrastiscan-icon-inv-128px.png"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "theme"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "welcome.html",
    "open_in_tab": true
  }
}